<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#3a6d99">

    <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:src="@drawable/loading"
            android:id="@+id/loading_figth_icon"
            android:layout_marginTop="60dp"/>

    <TextView
            android:id="@+id/title_search_fight"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="@string/title_search_fight"
            android:layout_marginTop="20dp" android:textColor="#FFFFFF" android:textSize="24sp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="431dp" app:srcCompat="@drawable/waiting_fight" android:id="@+id/imageView"
            android:contentDescription="fight"/>


</LinearLayout>