<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.cards.CardsFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:baselineAligned="false" android:background="#3a6d99">

        <TextView
                android:id="@+id/textview_myteam"
                android:text="@string/text_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textAlignment="center" android:background="#315C81" android:textColor="#FFFFFF"
                android:autoText="true"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_cards_userteam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".ui.cards.CardsFragment"
                    tools:listitem="@layout/linearlayout_teamcard" android:background="#315C81"
                    android:paddingTop="10dp">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

        <View
                android:id="@+id/divider_cards"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider"/>

        <TextView
                android:id="@+id/textview_cards_othercards"
                android:text="@string/text_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:paddingBottom="10dp" android:textColor="#FFFFFF" android:textSize="30sp"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="10dp">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_cards_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    tools:context=".ui.cards.CardsFragment"
                    tools:listitem="@layout/linearlayout_card"/>
        </RelativeLayout>

        <Button
                android:id="@+id/btn_cards_createteam"
                android:width="170dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="@string/btn_create_team"
                android:textColor="#FFFFFF"
                android:background="#7f0000"
                android:visibility="invisible"/>
    </LinearLayout>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/progressbar_cards_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    <LinearLayout
            android:id="@+id/linearlayout_cards_nocards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

        <TextView
                android:id="@+id/textview_cards_nocards_firstline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textAlignment="center"
                android:text="@string/text_no_cards_first_line" android:textColor="#FFFFFFFF"/>

        <TextView
                android:id="@+id/textview_cards_nocards_secondline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textAlignment="center"
                android:text="@string/text_no_cards_second_line" android:textColor="#FFFFFFFF"/>
    </LinearLayout>


</FrameLayout>